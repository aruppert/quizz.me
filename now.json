{
  "name": "quizzle",
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    },
    { "src": "server.js", "use": "@now/node-server" }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "MONGO_URL": "@quizzle_mongo_url",
    "DB_NAME": "@quizzle_db_name"
  }
}
